{
  "name": "@unitedincome/components",
  "description": "React library for all United Income Front-End projects.",
  "author": "United Income",
  "version": "0.0.6",
  "main": "dist/index.js",
  "license": "UNLICENSED",
  "scripts": {
    "start": "start-storybook -p 9001 -c .storybook",
    "storybookIntegration": "start-storybook --ci -p 9009 -s public -c .storybook",
    "build": "webpack",
    "test": "yarn testSingle 'tests/**/*.js' | faucet",
    "testCI": "NODE_ENV=test nyc tape -r @babel/register -r ./utils-for-tests/configureEnzyme.js -r jsdom-global/register -r ignore-styles 'tests/**/*.js'  | tap-xunit > ./reports/tape/results.xml",
    "coverage": "nyc report",
    "jest:integration": "jest --runInBand -c integration/jest.config.js",
    "test:integration": "start-server-and-test storybookIntegration http-get://localhost:9009 jest:integration",
    "testSingle": "NODE_ENV=test tape -r @babel/register -r ./utils-for-tests/configureEnzyme.js -r jsdom-global/register -r ignore-styles",
    "buildStorybook": "build-storybook -c .storybook -o .build",
    "publishStorybook": "yarn buildStorybook && ./publishStorybook.sh",
    "lint": "eslint './integration/*.js' 'tests/**/*.js' './stories/**/*.js' './components/**/*.js' --cache && sass-lint 'component/**/*.sass' -qv && prettier -l './components/**/*.js' && prettier -l './components/**/*.scss' --parser=css || (echo need formatting, use yarn format ; exit 1)",
    "format": "prettier --write './tests/**/*.js' './integration/*.js' './components/**/*.js' './stories/**/*.js' && prettier --write './components/**/*.scss' --parser=css"
  },
  "homepage": "https://github.com/UnitedIncome/component",
  "repository": {
    "type": "git",
    "url": "https://github.com/UnitedIncome/component.git"
  },
  "bugs": {
    "url": "https://github.com/UnitedIncome/component/issues"
  },
  "devDependencies": {
    "@babel/core": "*",
    "@babel/plugin-transform-runtime": "*",
    "@babel/plugin-transform-spread": "*",
    "@babel/polyfill": "*",
    "@babel/preset-env": "*",
    "@babel/preset-react": "*",
    "@babel/register": "*",
    "@babel/runtime": "*",
    "@storybook/addon-knobs": "*",
    "@storybook/react": "*",
    "airbnb-prop-types": "*",
    "babel-loader": "*",
    "babel-plugin-istanbul": "*",
    "classnames": "*",
    "css-loader": "*",
    "enzyme": "*",
    "enzyme-adapter-react-16": "*",
    "eslint": "*",
    "eslint-config-prettier": "*",
    "eslint-plugin-jsx-a11y": "*",
    "eslint-plugin-react": "*",
    "faucet": "*",
    "ignore-styles": "*",
    "jest-image-snapshot": "*",
    "jest-puppeteer": "*",
    "puppeteer": "*",
    "start-server-and-test": "*",
    "jest": "*",
    "jsdom": "*",
    "jsdom-global": "*",
    "mini-css-extract-plugin": "*",
    "node-sass": "*",
    "nyc": "*",
    "optimize-css-assets-webpack-plugin": "*",
    "prettier": "*",
    "prop-types": "*",
    "react": "*",
    "react-dom": "*",
    "react-router": "3",
    "sass-lint": "*",
    "sass-loader": "*",
    "sinon": "*",
    "style-loader": "*",
    "tap-xunit": "*",
    "tape": "*",
    "uglifyjs-webpack-plugin": "*",
    "webpack": "*",
    "webpack-cli": "*"
  },
  "peerDependencies": {
    "classnames": "*",
    "prop-types": "*",
    "react": "*",
    "react-dom": "*",
    "react-router": "3"
  }
}
